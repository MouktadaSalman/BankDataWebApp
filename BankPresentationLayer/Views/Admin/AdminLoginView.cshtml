@{
    Layout = null;
}
<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
</head>

<body>
    <!-- Pop-up to indicate login failed -->
    <div id="loginModal" class="modal">
        <div class="modal-content">
            <span id="lClose" class="close">&times;</span>
            <div class="icon-text-container">
                <i class="fas fa-ban"></i>
                <p>Login failed. Please check your username and password.</p>
            </div>
        </div>
    </div>

    <!-- Log In Form Section -->
    <section>
        <div class="container" id="containerB">
            <div class="form-container sign-in-container">
                <form action="#">
                    <h1>Sign in</h1>

                    <input type="text" id="aName" name="SName" placeholder="Enter Username" required />
                    <input type="password" id="aPass" name="SPass" placeholder="Enter Password" required />

                    <button type="button" id="aLoginButton" class="btn">Login</button>
                    
                    <!-- Back to the home login -->
                    <nav class="home-nav">
                        <a id="backHomeButton" class="home-link">Back</a>
                    </nav>
                </form>
            </div>
        </div>
    </section>

    <script src="/js/site.js"></script>
    <script src="/js/adminlogin.js"></script>
    <script src="/js/adminsite.js"></script>
</body>

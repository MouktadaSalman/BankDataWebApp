@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bank Dashboard</title>
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body onload="loadUserProfile(); loadUserAccount();" >
    <header>
        <div class="container">
            <div class="header-content">
                <div class="logo">User Dashboard</div>

                <div class="profileInfo">
                    <div class="container">
                        <img src="~/images/avatar.png" alt="User Avatar" class="avatar">
                        <div class="middle">
                            <button class="text" id="openModal">Update Profile</button>
                        </div>
                    </div>

                    <div>
                        <h3 id="userName"></h3>
                        <p id="userEmail"></p>
                        <p id="userPhone"></p>
                    </div>
                </div>

                <nav>
                    <button id="logoutBtn" class="btn">Log Out</button>
                </nav>
            </div>
        </div>
    </header>

    <main class="container">
        <div class="dashboardGrid">
            <!-- Modal -->
            <div id="myModal" class="modal" style="display:none;">
                <div class="modal-content">
                    <button class="close">&times;</button>
                    <h3>Profile Information</h3>

                    <!-- View Mode -->
                    <div id="viewProfile">
                        <p>Name: <span id="viewName"></span></p>
                        <p>Email: <span id="viewEmail"></span></p>
                        <p>Phone: <span id="viewPhone"></span></p>
                        <p>Address: <span id="viewAddress"></span></p>
                        <button id="editProfileButton" class="btn">Edit</button>
                    </div>

                    <!-- Edit Mode -->
                    <form id="editProfileForm" style="display:none;">
                        <label for="editName">Name:</label><br>
                        <input type="text" id="editName" name="name"><br><br>
                        <label for="editEmail">Email:</label><br>
                        <input type="email" id="editEmail" name="email"><br><br>
                        <label for="editPhone">Phone:</label><br>
                        <input type="text" id="editPhone" name="phone"><br><br>
                        <label for="editAddress">Address:</label><br>
                        <input type="text" id="editAddress" name="address"><br><br>
                        <button type="button" id="saveButton" class="btn">Save Changes</button>
                    </form>
                </div>
            </div>

            </div>

            <section class="accountSummary card">
                <h2>Account Summary</h2>
                <div class="accountDetails">
                    <p>Account Number: <span id="accountNumber"></span></p>
                    <p>Current Balance: <span id="accountBalance"></span></p>
                </div>
            </section>

            <section class="transactionHistory card">
                <h2>Transaction History</h2>
                <div class="filterOptions">
                    <input type="date" id="startDate">
                    <input type="date" id="endDate">
                    <button id="filterTransactions" class="btn">Filter</button>
                </div>
                <ul id="transactionList" class="transaction-list">
                    <li class="transactionItem"></li>
                </ul>
            </section>

            <section class="moneyTransfer card">
                <h2>Money Transfer</h2>
                <form id="transfer">
                    <input type="text" id="transferTo" placeholder="Transfer To(Account Number)">
                    <input type="text" id="transferAmount" placeholder="Amount">
                    <input type="textArea" id="transferDetails" placeholder="Transfer Description">
                    <button type="submit" id="transfer" class="transferButton">Transfer</button>
                </form>
            </section>
        </div>
    </main>

    <script src="~/js/site.js"></script>
</body>
</html>
